    <script>
        function downloadCV() {
            let content = document.querySelector('.container').innerHTML;
            let blob = new Blob([content], { type: 'text/html' });
            let link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = 'CV.html';
            link.click();
        }
    </script>
